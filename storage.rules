rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    // Ticket images used by the app.
    match /lottery/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    match /lottery_copy/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // User-owned support chat uploads.
    match /support_chats/{uid}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    // Default deny.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
